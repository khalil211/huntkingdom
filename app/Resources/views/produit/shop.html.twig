        $(function(){
            {% for produit in produits %}
            $('#addCart{{ produit.id }}').click(function(e){
                {% if app.user %}
                $.ajax({
                    url: '{{ path('add_to_cart', {'id': produit.id}) }}',
                    success: function(data){
                        $('#miniCart').html(data);
